<br />
<button id="test" class="btn btn-warning btn-lg">Auto weg</button>

@section scripts
{
    <script>
        var myFirstModule = (function () {
            var _color = "red";

            var init = function () {
                $("#test").click(
                    function () {
                        $(this).css("color", _color);
                    });
            };
            var setColor = function (myColor) {
                _color = myColor;
            };

            return {
                init: init,
                setColor: setColor,
                
            };
        })();

        $(function () {
            // TODO: ich möchte hier die Farbe angeben können!
            var newColor = "green";
            myFirstModule.setColor(newColor);
            myFirstModule.init();
        });

    </script>
}

