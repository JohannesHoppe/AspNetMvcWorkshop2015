</div> 

<img src="~/api/Catty" style="display:block;" />

<br/>

<a href="/odata/Customers?$top=5&$skip=2" class="btn btn-warning">Beispiel OData Paging mit $top=5&$skip=2</a>
    
@section footer
{
    <b>Username: @ViewBag.CurrentUserName</b><br/> 
    <a href="/odata/$metadata">/odata/$metadata</a>
}
  
<button id="test" class="btn btn-warning btn-lg">Text :-)</button>

@section scripts
{
    <script>

        var myFirstNamespace = myFirstNamespace || {};


        myFirstNamespace.myFirstModule = (function ($) {

            var _color = "red";

            var init = function() {

                $("#test").click(function() {
                    $(this).css("color", _color);
                });
            };

            var setColor = function(color) {
                _color = color;
            }

            return {
                init: init,
                setColor: setColor
            }
        })(window.jQuery);
        

        // TODO: ich möchte hier die Farbe angeben können!
        var newColor = "green";

        $(function() {

            myFirstModule.setColor(newColor);
            myFirstModule.init();
        });

    </script>

}
