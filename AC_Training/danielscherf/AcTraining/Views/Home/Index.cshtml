<button id="test" class="btn btn-warning btn-lg">Text ;-)</button>

@section scripts
{
    <script>
        var _color = "red";

        var MyFirstModule = (function () {
            var _color = "red";
            var init = function () {
                $("#test").click(function () {
                    $(this).css("color", _color);
                });

            };
            var setColor = function (newColor) {
                _color = newColor;
            };


            return {
                init: init,
                setColor: setColor
            }

        })();




        $(function () {
            var newColor = "green";
            MyFirstModule.setColor(newColor);
            MyFirstModule.init();
        });
    </script>
}
