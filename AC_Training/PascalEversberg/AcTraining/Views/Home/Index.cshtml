@section scripts
{
    <script>
        $("h1").css("color","red")
    </script>

    <script>

        var myFirstModule = (function() {

            var _color = "red";
            var _events = $({});

            var init = function () {
                //var init = function (farbe) {
                //_color = farbe;
                $("#test").click(function() {
                    $(this).css("color", _color);
                });
            };

            var setColor = function(newColor) {
                _color = newColor;
            };

            return {
                init: init,
                setColor: setColor,
                events : _events
        }
        })();

        $(function() {
            // Hier wird die Farbe angegeben
            //var farbe "blue";
            // myFirstModule.init(farbe);

            //Alternative mit set-Funktion
            var newColor = "green";
            myFirstModule.setColor(newColor);
            myFirstModule.init();
        });

    </script>
}

